<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="${namespace}">

    <!-- locationprefix = back or front -->
    <!-- wheel_base_dx = distancia adelante atras-->
    <!-- wheel_base_dz = distancia arriba abajo -->

    <xacro:macro name="caster_wheel" params="locationprefix wheel_base_dx wheel_base_dz">
        <!-- caster hub/base -->
        <joint name="${locationprefix}_caster_rotation_joint" type="continuous">
            <origin xyz="${wheel_base_dx} 0 ${wheel_base_dz}" rpy="0 0 0" />
            <parent link="base_link"/>
            <child link="${locationprefix}_caster_rotation_link" />
            <axis xyz="0 0 1" />
            <dynamics damping="0.01" friction="0.0"/>
        </joint>

        <link name="${locationprefix}_caster_rotation_link">
            <inertial>
                <origin xyz="0 0 -0.042500000044" rpy="0 0 ${0.5 * pi} " />
                <mass value="${caster_base_mass}" />
                <inertia
                ixx="0.0005844517978"
                ixy="0"
                ixz="0"
                iyy="0.00052872551237"
                iyz="0"
                izz="0.00017923555074" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 ${pi}" />
                <geometry>
                    <mesh filename="${caster_base_mesh}" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 ${pi}" />
                <geometry>
                    <mesh filename="${caster_base_mesh}" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}"/>
                </geometry>
            </collision>
        </link>

        <!-- caster wheel -->
        <joint name="${locationprefix}_caster_wheel_joint" type="continuous">
            <origin xyz="${-caster_wheel_to_base_x} 0 ${caster_wheel_to_base_z}" rpy="0 0 0" />
            <parent link="${locationprefix}_caster_rotation_link" />
            <child link="${locationprefix}_caster_wheel_link" />
            <axis xyz="0 1 0" />
        </joint>

        <link name="${locationprefix}_caster_wheel_link">
            <xacro:cylinder_inertial mass="${caster_wheel_mass}" radius="${caster_radius}" length="${caster_height}">
                <origin xyz="0 0 0" rpy="${0.5 * pi} 0 0" />
            </xacro:cylinder_inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 ${pi}" />
                <geometry>
                    <mesh filename="${caster_wheel_front_mesh}" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}"/>
                </geometry>
                <xacro:insert_block name="material_blue"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 ${pi}" />               
                <geometry>
                    <mesh filename="${caster_wheel_front_mesh}" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}"/>
                </geometry>
            </collision>
        </link>
    </xacro:macro>

</robot>